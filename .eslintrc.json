{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/all"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "allowForLoopAfterthoughts": true,
        "import/no-named-as-default": 0,
        "no-console": "off",
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ]
    }
}